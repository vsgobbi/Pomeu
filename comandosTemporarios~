#Exemplos de manutencao de nivel de voo: PT ORO, mantenha FL240 até novo contato.
                              #PP MKR, mantenha FL330, aguarde para descida
                              #AZA 4422,desça e mantenha FL260, reporte livrando FL370
                              #TIB 5545, solicita descida para FL 330 proa Poços de Caldas
until further advised:echo "until further advised"
stand by for descent:echo "stand by for descent"
report leaving:echo "report leaving"
request descent to:echo "request descent to"

#Mudanca de nivel de voo: "FAB 2464 , suba e mantenha FL 240,reporte atingindo"
                          "PT RCF, continue descida até FL 230"
                          "PT BBL, desça para FL 150, acuse atingindo"

climb and maintain:echo "climb and maintain"
report reaching:echo "report reaching"
continue descent until:echo "continue descent until"
descend to:echo "descend to"

#Vetoracao para separacao de tráfego. Exemplos:
